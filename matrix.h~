#include "vector.h"

typedef struct
{
  float A[4][4];
}Matrix;

Matrix add_scalar(Matrix *m,float k);

Matrix Sub_scalar(Matrix *m,float k);

Matrix multiply(Matrix m1,Matrix m2);

vector multiply_vector(Matrix *m, vector *v);

Matrix transpose(Matrix *m);

Matrix inverse(Matrix *m);


Matrix return_translate(float x,float y,float z);


Matrix return_rotate_x(float theta);


Matrix return_rotate_y(float theta);


Matrix return_rotate_z(float theta);

void print(Matrix m);
